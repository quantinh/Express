<!DOCTYPE html>
<html lang="en">
      <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>display CRUD</title>
      </head>
      <style>
            table {
                  font-family: arial, sans-serif;
                  border-collapse: collapse;
                  width: 100%;
            }
            td, th {
                  border: 1px solid #dddddd;
                  text-align: left;
                  padding: 8px;
            }
            tr:nth-child(even) {
                  background-color: #dddddd;
            }
            .btn-edit {
                  background-color: #00b7ff;
            }
            .btn-del {
                  background-color: red;
            }
      </style>
      <body>
            <table>
                  <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Action</th>
                  </tr>
                  <tr>
                  <!-- Dấu = <=> echo dữ liệu -->
                  <% for (let i = 0; i < dataTable.length; i++) { %>
                        <tr>
                              <td><%= dataTable[i].firstName %></td>
                              <td><%= dataTable[i].lastName %></td>
                              <td><%= dataTable[i].email %></td>
                              <td><%= dataTable[i].address %></td>
                              <td>
                                    <a href="/edit-crud/?id=<%= dataTable[i].id %>" class="btn-edit">Edit</a>
                                    <a href="/delete-crud/?id=<%= dataTable[i].id %>" class="btn-del">Delete</a>
                              </td>
                        </tr>
                  <% } %>
            </table>
      </body>
</html>